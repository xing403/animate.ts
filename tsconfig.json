{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts",
  ],
}
